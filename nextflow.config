/*
==================================================
 SAFE Nextflow configuration (Nextflow 25.x)
==================================================
*/

/* ---------------- Process defaults ---------------- */
process {
    executor = 'local'
    cpus     = 2
    memory   = '4 GB'
    time     = '2h'
}

/* ---------------- Conda (CORRECT WAY) ---------------- */
/*
  NOTE:
  - conda is a STRING here (path)
  - enabled is BOOLEAN
  - NOT inside `process { }`
*/
conda {
    enabled = true
    env = "${projectDir}/envs/r_tcga.yml"
}

/* ---------------- Work directory ---------------- */
workDir = "${projectDir}/work"

/* ---------------- Reports (safe) ---------------- */
trace {
    enabled = true
}

timeline {
    enabled = true
}

report {
    enabled = true
}
